# General Unix config files
# ls
alias ls='ls -Gph'
alias ll='ls -l'
alias la='ll -a'

# Prompt
function _update_ps1() {
    PS1="$(~/.bash/powerline-shell/powerline-shell.py --cwd-mode dironly  $? 2> /dev/null)"
}
if [ "$TERM" != "linux" ]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi
